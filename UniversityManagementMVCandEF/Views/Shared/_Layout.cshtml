<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class=".navbar-inverse { background-color: #A52A2A!important; } navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Daffodil International University Home", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li class="divider-vertical"></li>
                    <li class="@(ViewBag.Active == "Department" ? "active" : "")">
                        @Html.ActionLink("Department", "Index", "Department")
                    </li>
                    <li class="divider-vertical"></li>
                    <li class="@(ViewBag.Active == "Teacher" ? "active" : "")">
                        @Html.ActionLink("Teacher", "Index", "Teacher")
                    </li>
                    <li class="divider-vertical"></li>
                    <li class="@(ViewBag.Active == "Course" ? "active" : "")">
                        @Html.ActionLink("Course", "Index", "Course")
                    </li>
                    
                    <li class="divider-vertical"></li>
                    <li class="@(ViewBag.Active == "Student" ? "active" : "")">
                        @Html.ActionLink("Student", "Index", "Student")
                    </li>
                    <li class="divider-vertical"></li>
                    <li class="@(ViewBag.Active == "Enrollment" ? "active" : "")">
                        @Html.ActionLink("Enrollment", "Index", "Enrollment")

                    <li class="divider-vertical"></li>
                    <li class="@(ViewBag.Active == "Class Room Allocation" ? "active" : "")">
                        @Html.ActionLink("Class Room Allocation", "Index", "ClassRoomAllocation")
                    </li>


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Developed by Nahid </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
